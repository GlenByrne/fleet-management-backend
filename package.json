{
  "name": "fleet-management-backend",
  "version": "1.0.0",
  "description": "Fleet Management Backend",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only src/server",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write .",
    "test-all": "yarn check-format && yarn check-lint && yarn check-types && yarn build",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@envelop/core": "^2.0.0",
    "@envelop/depth-limit": "^1.2.3",
    "@prisma/client": "^3.10.0",
    "altair-fastify-plugin": "^4.4.0",
    "argon2": "^0.28.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "fastify": "^3.27.2",
    "fastify-cookie": "^5.6.0",
    "fastify-cors": "^6.0.3",
    "graphql": "^16.3.0",
    "graphql-helix": "^1.11.0",
    "graphql-middleware": "^6.1.15",
    "graphql-relay": "^0.10.0",
    "graphql-scalars": "^1.14.1",
    "graphql-shield": "^7.5.0",
    "graphql-sse": "^1.0.6",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.6.2",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.2.0",
    "nodemailer": "^6.7.2",
    "typed-graphql-subscriptions": "^0.0.1",
    "uuid": "^8.3.2",
    "ws": "^8.5.0",
    "yarn-upgrade-all": "^0.6.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "prisma": "^3.10.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{js,ts,jsx,tsx,css,md}": "prettier --write"
  }
}
