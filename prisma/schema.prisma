datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Vehicle {
  id                            String    @id @default(cuid())
  registration                  String    @unique
  make                          String
  model                         String
  owner                         String    @default("Dennehy's")
  cvrtDueDate                   DateTime?
  thirteenWeekInspectionDueDate DateTime?
  tachoCalibrationDueDate       DateTime?
  depot                         Depot     @relation(fields: [depotId], references: [id])
  depotId                       String
  fuelCard                      FuelCard?
  tollTag                       TollTag?
  defects                       Defect[]
}

model Depot {
  id        String     @id @default(cuid())
  name      String     @unique
  vehicles  Vehicle[]
  fuelCards FuelCard[]
  tollTags  TollTag[]
}

model FuelCard {
  id           String   @id @default(cuid())
  cardNumber   String   @unique
  cardProvider String
  vehicle      Vehicle? @relation(fields: [vehicleId], references: [id])
  vehicleId    String?  @unique
  depot        Depot    @relation(fields: [depotId], references: [id])
  depotId      String
}

model TollTag {
  id          String   @id @default(cuid())
  tagNumber   String   @unique
  tagProvider String
  vehicle     Vehicle? @relation(fields: [vehicleId], references: [id])
  vehicleId   String?  @unique
  depot       Depot    @relation(fields: [depotId], references: [id])
  depotId     String
}

model Defect {
  id            String    @id @default(cuid())
  description   String
  dateReported  DateTime
  dateCompleted DateTime?
  status        String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId     String    @unique
}
